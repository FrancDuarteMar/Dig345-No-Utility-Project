<h1>Image Steganography</h1>

{{#if img_src}}
<h3>Prompt: </h3>

<img id="unencrypted" src="{{{img_src}}}" alt="" />


{{else}}
<form method="post" enctype="multipart/form-data" action="/upload">
    <input type="text" name="mytext" Enter Text to Encode />

    <input type="file" name="file">

    <input type="submit" value="Encode">

</form>

{{/if}}

{{#if img_enc}}
<img id="encrypted" src="{{{img_enc}}}" alt="" />

{{/if}}
{{#if decoded_text}}
<p>Decoded text:{{decoded_text}}</p>
{{else}}
<p>Encoded text:{{prompt}}</p>
{{/if}}
